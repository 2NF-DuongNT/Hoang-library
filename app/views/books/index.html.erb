<% provide(:title, t(".title")) %>
<div class="text-center mb-5">
    <h1><%= t(".title") %></h1>
</div>
<%= will_paginate %>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col"><%= t("books.form.label_name") %></th>
            <th scope="col"><%= t("books.form.label_author") %></th>
            <th scope="col"><%= t("books.form.label_publisher") %></th>
            <th scope="col"><%= t("books.form.label_book_type_id") %></th>
            <th scope="col"><%= t("books.form.label_price") %></th>
            <th scope="col"><%= t("books.form.label_status") %></th>
        </tr>
    </thead>
    <tbody>
        <%= render @books %>
    </tbody>
</table>
<p><%= will_paginate %></p>
