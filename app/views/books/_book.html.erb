<% object.each.with_index do |book, index|%>
    <tr>
        <td class="font-weight-bold"><%= index+1 %></td>
        <td><%= link_to book.name, employees_book_path(book), class: "btn" %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.book_type_name %></td>
        <td><%= book.price %></td>
        <td><%= book.status %></td>
        <td>
            <%= link_to book_path(book) do %>
                <i class='bi bi-eye-fill text-dark'></i>
            <% end %>
        </td>
    </tr>
<% end %>
